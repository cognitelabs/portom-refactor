
<section class="section section-primary mt-none" id="projects">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2>Latest <strong>Websites</strong></h2>
				<% projectCount = 0 %>
				<% data.projects.each do |key, value| %>
					<% projectCount = projectCount + 1 %>
					<div id="popupProject<%= projectCount %>" class="popup-inline-content">
						<h2 class="mt-lg"><%= key %> </h2>

						<div class="row">
							<div class="col-md-5">
								<img class="img-thumbnail img-responsive mb-lg" alt="" src="<%= value.thumbnail %>">
							</div>

							<div class="col-md-7">

								<h4 class="heading-primary mb-sm"><strong>Description</strong></h4>
								<p><%= value.description %></p>

								<a href="<%= value.livelink %>" class="btn btn-primary">Live Preview</a> <span class="arrow hlb"></span>

								<hr class="solid tall">

								<h4 class="heading-primary mt-lg">Services</h4>

								<ul class="list list-icons">
									<% value.services.each do | serviceKey, serviceValue | %>
									<li><i class="fa fa-check"></i> <%= serviceKey %></li>
									<% end %>
								</ul>

							</div>
						</div>
					</div>

				<% end %>

				<div class="owl-carousel mb-none" data-plugin-options='{"items": <%= data.projects.count %>, "margin": 20, "loop": false}'>
					<% projectCountAgain = 0 %>
					<% data.projects.each do |key, value| %>
						<% projectCountAgain = projectCountAgain + 1 %>
					<div>
						<a href="#popupProject<%= projectCountAgain %>" data-plugin-lightbox data-plugin-options='{"type": "inline", preloader: false}'>
							<span class="thumb-info">
								<span class="thumb-info-wrapper">
									<img src="<%= value.thumbnail %>" class="img-responsive" alt="">
									<span class="thumb-info-title">
										<span class="thumb-info-inner"><%= value.clientname %></span>
										<span class="thumb-info-type"><%= value.projecttype %></span>
									</span>
									<span class="thumb-info-action">
										<span class="thumb-info-action-icon"><i class="fa fa-link"></i></span>
									</span>
								</span>
							</span>
						</a>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>