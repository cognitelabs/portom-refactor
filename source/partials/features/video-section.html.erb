<section class="video section section-text-light section-video section-center mt-none" data-video-path="video/dark" data-plugin-video-background data-plugin-options='{"posterType": "jpg", "position": "50% 50%", "overlay": true}'>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div class="owl-carousel nav-bottom rounded-nav mt-lg mb-none" data-plugin-options='{"items": 1, "loop": false}'>
					<% data.testimonials.each do |key, testimonial| %>
					<div>
						<div class="col-md-12">
							<div class="testimonial testimonial-style-6 testimonial-with-quotes mb-none">
								<blockquote>
									<p><%= testimonial.text %></p>
								</blockquote>
								<div class="testimonial-author">
									<p><strong><%= testimonial.attribution.person %></strong><span><%= testimonial.attribution.title %></span></p>
								</div>
							</div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>