<section id="team">
	<div class="container">
		<div class="row mt-xlg">
			<div class="col-md-12">
				<h2>Meet the <strong>Team</strong></h2>
			</div>
		</div>
		<% data.team.each do | key, value| %>
		<div class="row mb-xlg">
			<div class="col-md-3 col-sm-6 col-xs-12">
				<span class="thumb-info thumb-info-hide-wrapper-bg">
					<span class="thumb-info-wrapper">
						<a href="<%= value.link %>">
							<img src="<%= value.picture %>" class="img-responsive" alt="">
							<span class="thumb-info-title">
								<span class="thumb-info-inner"><%= key %></span>
								<span class="thumb-info-type"><%= value.title %></span>
							</span>
						</a>
					</span>
					<span class="thumb-info-caption">
						<span class="thumb-info-caption-text"><%= value.description %></span>
						<span class="thumb-info-social-icons">
							<% if value.facebook %>
								<a target="_blank" href="http://www.facebook.com/<%= value.facebook %>"><i class="fa fa-facebook"></i><span>Facebook</span></a>
							<% end %>
							<% if value.twitter %>
								<a href="http://www.twitter.com/<%= value.twitter %>"><i class="fa fa-twitter"></i><span>Twitter</span></a>
							<% end %>
							<% if value.linkedin %>
								<a href="<%= value.linkedin %>"><i class="fa fa-linkedin"></i><span>Linkedin</span></a>
							<% end %>
						</span>
					</span>
				</span>
			</div>
			<% end %>
		</div>
	</div>
</section>